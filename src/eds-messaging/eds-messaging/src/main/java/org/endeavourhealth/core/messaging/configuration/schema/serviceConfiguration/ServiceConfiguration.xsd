<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:simpleType name="nonEmptyString">
		<xs:restriction base="xs:string">
			<xs:minLength value="1"/>
			<xs:pattern value=".*[^\s].*"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:element name="ServiceConfiguration">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Service" type="Service"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:complexType name="Service">
		<xs:sequence>
			<xs:element name="Id" type="nonEmptyString"/>
			<xs:element name="Listeners">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="HttpListener" type="HttpListener" minOccurs="0" maxOccurs="unbounded"/>
						<xs:element name="RabbitListener" type="RabbitListener" minOccurs="0" maxOccurs="unbounded"/>
                        <xs:element name="SftpListener" type="SftpListener" minOccurs="0" maxOccurs="unbounded"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="MessageTypes">
				<xs:complexType>
					<xs:sequence minOccurs="0" maxOccurs="unbounded">
						<xs:element name="MessageType" type="MessageType"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="MessageType">
		<xs:sequence>
			<xs:element name="Id" type="xs:string"/>
			<xs:element name="LogInbound" type="xs:boolean"/>
			<xs:element name="LogOutbound" type="xs:boolean"/>
			<xs:element name="MessageProcessorClass" type="xs:string"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="HttpListener">
		<xs:sequence>
			<xs:element name="Port" type="xs:int"/>
			<xs:element name="Receiver" type="HttpReceiver" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="RabbitListener">
		<xs:sequence>
			<xs:element name="Credentials">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="Username" type="nonEmptyString"/>
						<xs:element name="Password" type="nonEmptyString"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="Nodes" type="nonEmptyString" minOccurs="0"/>
			<xs:element name="Receiver" type="RabbitReceiver" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
    <xs:complexType name="SftpListener">
        <xs:sequence>
            <xs:element name="Host" type="nonEmptyString"/>
            <xs:element name="Port" type="xs:int"/>
            <xs:element name="Credentials">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="Username" type="nonEmptyString"/>
                        <xs:element name="Password" type="nonEmptyString"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element name="Receiver" type="SftpReceiver" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
	<xs:complexType name="HttpReceiver">
		<xs:sequence>
			<xs:element name="Path" type="nonEmptyString"/>
			<xs:element name="Methods" type="nonEmptyString" minOccurs="0"/>
			<xs:element name="IncludeSubPaths" type="xs:boolean" default="false" minOccurs="0"/>
			<xs:element name="ReceiverClass" type="nonEmptyString"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="RabbitReceiver">
		<xs:sequence>
			<xs:element name="Queue" type="nonEmptyString"/>
			<xs:element name="Exchange" type="nonEmptyString" minOccurs="0"/>
			<xs:element name="RoutingKey" type="nonEmptyString" minOccurs="0"/>
			<xs:element name="ReceiverClass" type="nonEmptyString"/>
		</xs:sequence>
	</xs:complexType>
    <xs:complexType name="SftpReceiver">
        <xs:sequence>
            <xs:element name="Path" type="nonEmptyString"/>
            <xs:element name="Filename" type="nonEmptyString" minOccurs="0"/>
            <xs:element name="PollTime" type="xs:int"/>
            <xs:element name="ReceiverClass" type="nonEmptyString"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
