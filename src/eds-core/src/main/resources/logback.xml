<configuration>

  <!-- appender for console -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %level [%thread] %logger{10}:%line - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.endeavour.enterprise" level="DEBUG"/>  <!-- have ALL logging for Endeavour code -->
  <logger name="org.endeavourhealth" level="DEBUG"/>  <!-- have ALL logging for Endeavour code -->

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

  <!-- specofy a shutdown hook for logging, so all loggers are flushed before app exit -->
  <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>


</configuration>