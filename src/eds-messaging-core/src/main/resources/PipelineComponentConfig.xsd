<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:include schemaLocation="Common.xsd"/>

    <xs:complexType name="OpenEnvelopeConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="LoadSenderConfigurationConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="ValidateSenderConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="ValidateMessageTypeConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="PostMessageToLogConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="PostMessageToExchangeConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig">
                <xs:sequence>
                    <xs:element name="Credentials" type="Credentials" minOccurs="1" maxOccurs="1"/>
                    <xs:element name="Nodes" type="xs:string" minOccurs="1" maxOccurs="1"/>
                    <xs:element name="Exchange" type="xs:string" minOccurs="1" maxOccurs="1"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="ReturnResponseAcknowledgementConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="MessageTransformConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="PostToEventStoreConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="RunDataDistributionProtocolsConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="PostToSubscriberWebServiceConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="EnvelopMessageConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="PostToRestConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="PGPDecryptConfig">
        <xs:complexContent>
            <xs:extension base="ComponentConfig"/>
        </xs:complexContent>
    </xs:complexType>
</xs:schema>