<configuration>

  <!-- appender for console -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %level [%thread] %logger{10}:%line - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- appender for database -->
  <!--<appender name="DBAPPENDER" class="org.endeavourhealth.logging.CassandraDbAppender">
    <encoder>
      <pattern>%date %level [%thread] %logger{10}:%line - %msg%n</pattern>
    </encoder>
  </appender>-->


  <logger name="org.endeavour.enterprise" level="TRACE"/>  <!-- have ALL logging for Endeavour code -->
  <logger name="com.mchange" level="INFO"/>  <!--not interested in logback debug logging -->

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>