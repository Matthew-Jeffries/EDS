<?xml version="1.0" encoding="UTF-8"?>
<SftpReaderConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                         xsi:noNamespaceSchemaLocation="../../../../eds-messaging-core/src/main/resources/SftpReaderConfiguration.xsd">
  <Credentials>
    <Username>username</Username>
    <Password>password</Password>
  </Credentials>
  <Host>ftp.hostname.com</Host>
  <Port>8081</Port>
  <Path>/uploads</Path>
  <Filename>*.xml</Filename>
  <Polltime>10</Polltime>
    <Pipeline>
        <EnvelopMessage>
            <ExchangeProperties>
                <Property Key="Sender">ODS0000</Property>
                <Property Key="ResponseAddress">http://EMISCallBackRest.co.uk</Property>
            </ExchangeProperties>
        </EnvelopMessage>
        <PostToRest>
            <ExchangeProperties>
                <Property Key="DestinationAddress">http://localhost:8080/api/PostMessageAsync</Property>
            </ExchangeProperties>
        </PostToRest>
    </Pipeline>
</SftpReaderConfiguration>