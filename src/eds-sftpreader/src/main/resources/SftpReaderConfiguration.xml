<?xml version="1.0" encoding="UTF-8"?>
<SftpReaderConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                         xsi:noNamespaceSchemaLocation="../../../../eds-messaging-core/src/main/resources/SftpReaderConfiguration.xsd">
  <Credentials>
    <Username>guest</Username>
    <Password>guest</Password>
  </Credentials>
  <Host>localhost</Host>
  <Port>22</Port>
  <Path>/</Path>
  <Filename>Message.xml</Filename>
  <Polltime>10</Polltime>
    <Pipeline>
        <PGPDecrypt/>
        <EnvelopMessage>
            <ExchangeProperties>
                <Property Key="Format">text/xml</Property>
                <Property Key="Sender">ODS00000</Property>
                <Property Key="SourceSystem">EDS_FTP_Poller</Property>
                <Property Key="ResponseUri">http://EDS_POLLER_BusinessAck.co.uk</Property>
                <Property Key="DestinationAddress">192.168.0.1, 192.168.0.2, 192.168.0.3</Property>
            </ExchangeProperties>
        </EnvelopMessage>
        <PostToRest>
            <ExchangeProperties>
                <Property Key="DestinationAddress">http://localhost:8080/api/PostMessageAsync</Property>
            </ExchangeProperties>
        </PostToRest>
    </Pipeline>
</SftpReaderConfiguration>